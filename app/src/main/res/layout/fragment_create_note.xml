<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="org.gammf.collabora_android.app.gui.CreateNoteFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/lblInsertContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:text="@string/hello_blank_fragment"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:text="Create a new note"/>

    <Spinner
        android:id="@+id/spinnerSetState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/txtInsertContent"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView3"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="Set state"
        android:layout_alignBottom="@+id/spinnerSetState"
        android:layout_alignStart="@+id/lblInsertContent"/>

    <EditText
        android:id="@+id/txtInsertContent"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lblInsertContent"
        android:layout_below="@+id/lblInsertContent"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textMultiLine"/>

    <TextView
        android:id="@+id/lblINsertContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtInsertContent"
        android:layout_below="@+id/lblInsertContent"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="Insert content note"/>

    <EditText
        android:id="@+id/dateExpirationNewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"/>

    <EditText
        android:id="@+id/timeExpirationNewNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateExpirationNewNote"
        android:layout_alignBottom="@+id/dateExpirationNewNote"
        android:layout_toEndOf="@+id/dateExpirationNewNote"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="time"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Date Expiration"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/spinnerSetState"
        android:layout_alignStart="@+id/textView3"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Expiration"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toEndOf="@+id/dateExpirationNewNote"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/dateExpirationNewNote"
        android:layout_toStartOf="@+id/spinnerSetState"/>

    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
